@model Web.Models.MemberDetailsViewModel

@{ 
    ViewBag.Title = "Player Profile";
}

<div class="container">

    <hr />
    <h1>@ViewBag.Title</h1>
    <hr />

    <h2 class="mb-3">@Model.Name</h2>

    <div class="card mb-3">
        <div class="card-header">
            Personal Details
        </div>
        <div class="card-body pb-1">
            <dl>
                <dt>Gender</dt>
                <dd>@Model.Gender</dd>
                <dt>Date of birth</dt>
                <dd>@Model.DateOfBirth.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            Contact Details
        </div>
        <div class="card-body pb-1">
            <dl>
                <dt>Email</dt>
                <dd>@Model.Email</dd>
                <dt>Phone</dt>
                <dd>@Model.Phone</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            Interest Expression
        </div>
        <div class="card-body pb-1">
            <dl>
                <dt>Played before</dt>
                <dd>@Model.PlayedBefore</dd>
                <dt>Position</dt>
                <dd>@Model.Position</dd>
            </dl>
        </div>
    </div>

</div>