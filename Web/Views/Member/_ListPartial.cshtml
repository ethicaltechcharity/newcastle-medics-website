@model Web.Models.MemberIndexViewModel

<div id="results">

    <hr />
    <h4>Results (@Model.TotalResults)</h4>
    <hr />

    <div id="member-results" class="card-columns">
        @foreach (var member in Model.Members)
        {
            <div class="card">
                <h5 class="card-header">@member.Name</h5>
                <div class="card-body">
                    <dl>
                        <dt>
                            Gender
                        </dt>
                        <dd>
                            @member.Gender
                        </dd>
                        <dt>
                            Roles
                        </dt>
                        <dd>
                            @member.Roles
                        </dd>
                    </dl>
                </div>
                <div class="card-footer"><a href="#">Details</a></div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination">
            @if (Model.PageNumber == 1)
            {
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)">Previous</a></li>
            }

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (Model.PageNumber == i)
                {
                    <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?PageNumber=@i">@i</a></li>
                }

            }

            @if (Model.PageNumber == Model.PageCount)
            {
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)">Next</a></li>
            }
        </ul>
    </nav>
</div>