

@{ 
    ViewBag.Title = "Assess";
}

<div class="container">

    <hr />
    <h2>@ViewBag.Title</h2>
    <h6>Use this form to assess the skills of a player.</h6>
    <hr />

    <div class="form-row">
        <div class="form-group">
            <label for="select-player">Player</label>
            <select id="select-player" style="width:200px" class="form-control"></select>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="form-row">
                <div class="col-6">
                    <label class="col-form-label" for="select-skill">Skill</label>
                    <select id="select-skill" style="width:200px" class="form-control">
                        <optgroup label="Pass">
                            <option>Push</option>
                            <option>Slap</option>
                            <option>Hit</option>
                            <option>Disguise</option>
                            <option>Reverse</option>
                        </optgroup>

                    </select>
                </div>
                <div class="col-6">
                    <label class="col-form-label" for="assess-skill">Assessment</label>
                    <input id="assess-skill" style="width:200px" class="form-control" />
                </div>
            </div>


            <button class="btn btn-default">Add Skill</button>
        </div>

        
    </div>
    <button class="btn btn-default">Submit</button>
</div>